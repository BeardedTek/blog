{{- $pctx := . -}}
{{- if .IsHome -}}{{ $pctx = .Site }}{{- end -}}
{{- $pages := slice -}}
{{- if or $.IsHome $.IsSection -}}
{{- $pages = $pctx.RegularPages -}}
{{- else -}}
{{- $pages = $pctx.Pages -}}
{{- end -}}
{{ printf "<?xml version=\"1.0\" encoding=\"UTF-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
	<channel>
		<title>{{if eq .Titla .Site.Title }}{{ .Site.Title }}{{ else }}{{ with .Title }}{{.}} on {{ end }}{{ .Site.Title }}{{ end }}</title>
		<link>{{ .Permalink}}</link>
		<description>Most Recent Content {{ if ne .Title .Site.Title }}{{ with .Title }}in {{.}} {{ end }}{{ end }}on {{ .Site.Title }}</description>
		<generator>Hugo -- gohugo.io</generator>
		<language>en-us</language>
		{{ range .Site.RegularPages.ByDate.Reverse }}
			{{ if .IsPage }}
				<item>
					<title>{{ .Title | html }}</title>
					<link>{{ .Permalink }}</link>
					<pubDate>{{ .Date.Format "Mon, 02Jan2006 15:04:05 -0700" | safeHTML }}</pubDate>
					<description>{{ .Summary | html }}</description>
				</item>
			{{ end }}
		{{ end }}
	</channel>
</rss>
